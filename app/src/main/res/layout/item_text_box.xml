<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <!-- Row 1 -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal"
        android:padding="10dp"
        cardElevation="4dp"
        cardCornerRadius="8dp"
        cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/ibHeart"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:autofillHints=""
            android:drawableTop="@drawable/ic_heartrate2"

            android:padding="20dp"
            android:text="@string/heartdscription"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/ibTemp"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginStart="50dp"
            android:drawableTop="@drawable/ic_temp2"

            android:padding="20dp"
            android:text="Temprature below 35'c is indicates to serious illness"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textAlignment="center"
            android:textAllCaps="false"
             />


    </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Row 2 -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal"
        android:padding="10dp"
        cardElevation="4dp"
        cardCornerRadius="8dp"
        cardUseCompatPadding="true">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/ibBlood"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:drawableTop="@drawable/ic_blood2"
            android:drawableTint="@color/red"
            android:hint="check it you are good "
            android:padding="20dp"
            android:text="Blood Pressure"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/ibGlucose"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginStart="50dp"
            android:padding="20dp"
            android:text="Glucose"
            android:textAlignment="center"
            app:drawableTopCompat="@drawable/syringe_svgrepo_com" />
   </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>
