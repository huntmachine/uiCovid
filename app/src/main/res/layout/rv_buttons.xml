<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rv_buttons"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">


    <Button
        android:id="@+id/rvbut1"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="3dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="289dp"
        android:background="#FFFF"
        android:drawableStart="@mipmap/ic_breathing"
        android:text="@string/difficult_breathing"
        android:textAlignment="center"
        android:textSize="10sp"
        android:textStyle="bold"
        tools:ignore="VisualLintButtonSize" />

    <Button
        android:id="@+id/rvbut2"
        android:layout_width="132dp"
        android:layout_height="48dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="140dp"
        android:background="#FFFF"
        android:drawableStart="@mipmap/ic_sorethroat"
        android:text="@string/sore_throat"
        android:textAlignment="center"
        android:textSize="11sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/rvbut3"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="20dp"
        android:background="#FFFF"
        android:drawableStart="@mipmap/ic_fever"
        android:text="@string/fever"
        android:textAlignment="center"
        android:textSize="11sp"
        android:textStyle="bold" />


</RelativeLayout>